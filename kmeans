import cv2
import numpy as np
import matplotlib.pyplot as plt

def kmeans_segmentation(image_path, k=2):
    # Carregar a imagem
    image = cv2.imread(image_path)
    # Converter a imagem para o espa√ßo de cores RGB
    image_rgb = cv2.cvtColor(image, cv2.COLOR_BGR2RGB)
    # Converter a imagem RGB para um formato de dados 2D
    pixels = image_rgb.reshape(-1, 3)
    
    # Aplicar o algoritmo K-means
    criteria = (cv2.TERM_CRITERIA_EPS + cv2.TERM_CRITERIA_MAX_ITER, 100, 0.2)
    _, labels, centers = cv2.kmeans(pixels.astype(np.float32), k, None, criteria, 10, cv2.KMEANS_RANDOM_CENTERS)
    
    # Converter os centros para inteiros
    centers = np.uint8(centers)
    # Recriar a imagem segmentada
    segmented_image = centers[labels.flatten()]
    segmented_image = segmented_image.reshape(image_rgb.shape)
    
    # Mostrar as imagens original e segmentada
    plt.figure(figsize=(10, 5))
    plt.subplot(1, 2, 1)
    plt.title('Original Image')
    plt.imshow(image_rgb)
    plt.axis('off')

    plt.subplot(1, 2, 2)
    plt.title('Segmented Image')
    plt.imshow(segmented_image)
    plt.axis('off')

    plt.show()

# Exemplo de uso
kmeans_segmentation(r'insira_imagem_aqui')
