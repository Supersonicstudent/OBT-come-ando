import cv2
import numpy as np
import matplotlib.pyplot as plt

def check_image_loading(image_path):
    print(f"Tentando carregar a imagem do caminho: {image_path}")
    
    # Carregar a imagem
    image = cv2.imread(image_path)
    
    # Verificar se a imagem foi carregada com sucesso
    if image is None:
        print(f"Erro ao carregar a imagem. Verifique o caminho do arquivo: {image_path}")
    else:
        print("Imagem carregada com sucesso!")
        print(f"Forma da imagem: {image.shape}")
        
        # Converter a imagem para o espa√ßo de cores RGB
        image_rgb = cv2.cvtColor(image, cv2.COLOR_BGR2RGB)
        
        # Mostrar a imagem usando matplotlib
        plt.imshow(image_rgb)
        plt.title('Imagem Carregada')
        plt.axis('off')
        plt.show()

# Exemplo de uso com string "raw"
check_image_loading(r'C:\Users\steve\OneDrive\Documents\Local do engarrafamento.jpg')
